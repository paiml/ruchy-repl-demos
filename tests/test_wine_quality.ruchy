println("ğŸ§ª Wine Quality Demo - TDD Test Suite\n");

var total_tests = 0;
var passed_tests = 0;

fun test_assertion(name, actual, expected) {
    total_tests = total_tests + 1;
    if actual == expected {
        passed_tests = passed_tests + 1;
        println(f"âœ“ {name}");
    } else {
        println(f"âœ— {name}: Expected {expected}, got {actual}");
    }
}

fun test_within_range(name, actual, min_val, max_val) {
    total_tests = total_tests + 1;
    if actual >= min_val && actual <= max_val {
        passed_tests = passed_tests + 1;
        println(f"âœ“ {name}: {actual} in range [{min_val}, {max_val}]");
    } else {
        println(f"âœ— {name}: {actual} outside range [{min_val}, {max_val}]");
    }
}

