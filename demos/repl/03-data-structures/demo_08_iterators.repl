// Working with iterators in Ruchy
let numbers = [1, 2, 3, 4, 5]

// Basic iteration
for num in numbers {
    println(num)
}

// Iterator methods
let doubled = numbers.iter().map(|x| x * 2).collect()
println("Doubled: {:?}", doubled)

let evens = numbers.iter().filter(|&x| x % 2 == 0).collect()
println("Evens: {:?}", evens)

let sum = numbers.iter().sum()
println("Sum: {}", sum)

// Chain iterators
let more_numbers = [6, 7, 8]
let combined = numbers.iter().chain(more_numbers.iter()).cloned().collect()
println("Combined: {:?}", combined)

// Enumerate
for (index, value) in numbers.iter().enumerate() {
    println("Index {}: Value {}", index, value)
}