// Functions with default parameters
fn greet(name: &str, greeting: Option<&str>) -> String {
    let g = greeting.unwrap_or("Hello");
    format!("{}, {}!", g, name)
}
greet("Alice", None)
greet("Bob", Some("Hi"))

fn power(base: i32, exp: Option<i32>) -> i32 {
    base.pow(exp.unwrap_or(2) as u32)
}
power(3, None)
power(2, Some(8))